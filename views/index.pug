extends layout 

block content 
    // Usamos g-3 para un margen decente y centramos el bloque total
    .row.justify-content-center.g-3
        
        // --- TARJETA 1: CLIENTES ---
        // col-6 asegura que ocupe el 50%
        .col-6.col-md-6
            .card.shadow.text-center.h-100.d-flex.flex-column.justify-content-between.card-custom-height
                .card-body.d-flex.flex-column.justify-content-center
                    h5.card-title üë§ Clientes
                    p.card-text Administra los clientes registrados en el sistema.
                    div.mt-auto
                        a.btn.btn-primary(href="/customers") Ir a CRUD Cliente 
        
        // --- TARJETA 2: PEDIDOS ---
        .col-6.col-md-6
            .card.shadow.text-center.h-100.d-flex.flex-column.justify-content-between.card-custom-height

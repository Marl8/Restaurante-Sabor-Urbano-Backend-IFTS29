extends ../layout

block content 
  h2.mb-5.text-center Gestión de Pedidos

  // Mensaje de éxito o error
  if query.success
    script.
      alert('Pedido guardado con éxito!');
  if query.error
    script.
      alert('Error: ');

  a.btn.btn-secondary.mb-3.ms-2(href="/") ← Volver al menú

  .d-flex.flex-column.align-items-center.g-3
    a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "/delivery/add") ➕ Agregar Pedido
    a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "/delivery/list") 📋 Listar Pedidos
    a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "#") ✏️ UnBoton Pedido
    a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "#") 🗑 OtroBoton Pedido

  style.
    a.btn:hover {
      opacity: 0.85;
      transform: scale(1.02);
      transition: all 0.2s;
    }
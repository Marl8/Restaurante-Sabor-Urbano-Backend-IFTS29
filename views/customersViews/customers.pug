extends ../layout

block content
    h2.mb-5.text-center Clientes

    
    a.btn.btn-secondary.mb-3.ms-2(href="/") ← Volver al Menú
    

    if query.success
        script.
            alert(decodeURIComponent('!{query.success}'));
    if query.error
        .alert.alert-danger Error: !{query.error}

    .d-flex.flex-column.align-items-center.g-3
        a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "/customers/add") ➕ Agregar Cliente
        a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "/customers/list") 📋 Listar Clientes
        a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "/customers/update") ✏️ Editar Cliente
        a.btn.mb-3.w-50(style="background-color:#343a40; color:white; border:none;", href= "/customers/delete") 🗑 Eliminar Cliente

    style.
        a.btn:hover {
            opacity: 0.85;
            transform: scale(1.02);
            transition: all 0.2s;
        }